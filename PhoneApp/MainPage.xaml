<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PhoneApp.MainPage">

    <VerticalStackLayout Spacing="15"  Padding="20">
        <Label Text="Enter A Phone-word" FontSize="20" />
        <Entry x:Name="PhoneNumberText" Text="1-666-NETMAUI02" />
        <Button x:Name="TranslateButton" Text="Translate" Clicked="OnTranslate" />
        <Button x:Name="CallButton" Text="Call" Clicked="OnCall" />
        
        <!-- Prfefefrences -->
        <Label Text="Saving Preferences Locally" />
        <Entry x:Name="txtName" WidthRequest="150" HorizontalOptions="Center" />
        <Label x:Name="lblDateTime" HorizontalOptions="Center" />
        <Button x:Name="btnReg" Text="Register" Clicked="RegisterClicked" HorizontalOptions="Center"/>
        <Button x:Name="btnLogout" Text="Logout" Clicked="LogoutClicked" HorizontalOptions="Center" />

    </VerticalStackLayout>

</ContentPage>
